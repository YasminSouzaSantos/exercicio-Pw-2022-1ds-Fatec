    <script>
        let div0 = document.getElementById("y");
        let div1 = document.getElementById("z");
       
        
        
        div0.style.width = "300px";
        div0.style.heigth = "300px";
        div0.style.backgroundColor = "#ff0";
        div0.style.right = "200px";
        div0.innerHTML = "<h1> passe o mouse</h1>"
        

        div1.style.width = "300px";
        div1.style.heigth = "300px";
        div1.style.backgroundColor = "#f0f";
        div1.innerHTML = "<h1> clique aqui!</h1>";


        function cor(){
            div0.style.backgroundColor = "#0f0";
        }

        function clicar(){
            algo = prompt("Digite algo: ");
            alert(algo);

        }

    </script>
